<h2 class="mt-4 ms-4" style="color: #FA690D;"><%= t('users.signup') %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'm-4 text-light'}, data: {turbo: false}) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email, class: 'form-label fs-6' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control mb-4 w-25' %>
  </div>

  <div class="field">
    <%= f.label :password, class: 'form-label fs-6' %>    
    <%= f.password_field :password, autocomplete: "new-password", class: 'form-control w-25' %>
    <% if @minimum_password_length %>
    <em class="form-text">(<%= @minimum_password_length %> <%= t('users.min_chars') %>)</em>
    <% end %>
  </div>

  <div class="field mt-3">
    <%= f.label t('users.password_confirmation'), class: 'form-label fs-6' %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control mb-4 w-25' %>
  </div>

  <div class="actions">
    <%= f.submit t('users.sign_action'), class: 'btn btn-success' %>
  </div>
<% end %>
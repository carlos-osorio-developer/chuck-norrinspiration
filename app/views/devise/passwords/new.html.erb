<h2 class="mt-4 ms-4" style="color: #FA690D;">Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'm-4 w-25 text-light' }, data: {turbo: false}) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email, class: 'form-label fs-6' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control mb-4' %>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions", class: 'btn btn-success' %>
  </div>
<% end %>

<div class="ms-4 btn-group" role="group">
  <%= render "devise/shared/links" %>
</div>
